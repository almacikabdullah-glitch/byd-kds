# =====================================================
# BYD KDS Backend - Environment Variables
# =====================================================
# Kopyalayın: cp .env.example .env
# Değerleri kendi ortamınıza göre güncelleyin
# =====================================================

# Server
NODE_ENV=development
PORT=3000

# MySQL Database (MAMP)
DB_HOST=localhost
DB_PORT=8889
DB_USER=root
DB_PASSWORD=root
DB_NAME=byd_kds

# JWT Authentication
JWT_SECRET=byd-kds-super-secret-key-2024-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=byd-kds-refresh-secret-key-2024-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Cache Settings
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3001

# TOPSIS Settings
TOPSIS_NORMALIZATION=vector
TOPSIS_DEFAULT_SCENARIO=balanced
